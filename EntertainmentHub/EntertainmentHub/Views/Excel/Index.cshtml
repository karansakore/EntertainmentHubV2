@model IEnumerable<EntertainmentHub.Models.ExcelData>
<body style="background-color:black">
    <nav class="navbar navbar-expand-lg bg-dark fixed-top">
        <div class="container-fluid" style="color: #f5ccff">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="color: #ff8000; font-family: 'Times New Roman'; letter-spacing: 3px"><img src="~/Images/logoimg3.png" style="width:125px; height:107px;" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" style="color: #f5ccff">
                <span class="navbar-toggler-icon" style="color: #f5ccff"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="color: #f5ccff">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")" style="color: #f5ccff; font-family: 'Times New Roman', Times, serif; letter-spacing: 1.5px;">Home</a>
                    <a class="nav-link" href="@Url.Action("Index", "Excel")" style="color: #f5ccff; font-family: 'Times New Roman', Times, serif; letter-spacing: 1.5px;">Videos</a>
                    <a class="nav-link" href="@Url.Action("Index", "PDF")" style="color: #f5ccff; font-family: 'Times New Roman', Times, serif; letter-spacing: 1.5px;">Books</a>
                    <a class="nav-link" href="@Url.Action("Index", "Music")" style="color: #f5ccff; font-family: 'Times New Roman', Times, serif; letter-spacing: 1.5px;">Music</a>
                    <a class="nav-link" href="@Url.Action("Index", "Weather")" style="color: #f5ccff; font-family: 'Times New Roman', Times, serif; letter-spacing: 1.5px;">Weather</a>

                </div>
            </div>
        </div>
    </nav>




    <p>
        @*<button value="Click">@Html.ActionLink("Create New", "Create")</button>*@
    </p>
    <table class="table" style="margin-top:150px;">

        @{
            var items = Model.ToList();
            var itemsCount = items.Count;
            var rows = (int)Math.Ceiling(itemsCount / 3.0);
        }

        @for (int i = 0; i < rows; i++)
        {
            <tr>
                @for (int j = i * 4; j < Math.Min((i + 1) * 4, itemsCount); j++)
                {
                    var item = items[j];
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.URL)">
                            <img src="@Html.DisplayFor(modelItem => item.Images)" style="border-radius:10px;transition: transform 0.3s ease-in-out;" onmouseover="this.style.transform='scale(1.2)';" onmouseout="this.style.transform='scale(1)'; " />

                        </a>
                    </td>
                }
            </tr>

            <tr>
                @for (int j = i * 4; j < Math.Min((i + 1) * 4, itemsCount); j++)
                {
                    var item = items[j];
                    <td>
                        <h5 style="color: #f5ccff; text-align:center; letter-spacing:4px; font-family:'Times New Roman', Times, serif">@Html.DisplayFor(modelItem => item.Title)</h5>
                    </td>
                }
            </tr>


        }



    </table>
    <hr style="color:white" />
    @********************************************************************************************************@
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading" style="color: #f5ccff;"><img src="~/Images/logoimg3.png" style="width:100px; height:auto;" /></div>
        <div class="panel-body">
            <p style="color: #f5ccff;">&copy; @DateTime.Now.Year - EntertainmentHub</p>
        </div>

    </div>
</body>
